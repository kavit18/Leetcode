class Solution {
    public int numberOfSteps (int num) {
        
        int no = num;
        int count = 0;
        
        while(no!=0)
        {
            
            if(no%2==0)
            {
                no = no/2;
            }
            else
            {
                no = no - 1; 
            }
            
            count++;
        }
        
        return count;
        
    }
}
